doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Checkers
    link(rel='stylesheet', href='./css/app.css')
  body
    table#board
      tbody
        - for(var y = 0; y < 8; y++)
          tr
            - for(var x = 0; x < 8; x++)
              td(data-x=x, data-y=y, class=((x+y) % 2) ? 'valid' : '')

    script(src='./js/vendor/jquery-2.1.0.js')
    script(src='./js/source/main.js')
